---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';
import AdProjectlist from '~/components/ads/AdProjectlist.astro';
import { Image } from 'astro:assets';

export interface Project {
  slug: string;
  title: string;
  description: string;
  image?: any; // can be imported image or string
  publishDate?: string | Date;
  github?: string;
  status?: string[];
}

export interface Props {
  projects: Array<Project>;
}

const { projects } = Astro.props;
---

<div class="flex flex-col gap-6">
  <!-- Google AdSense Ad -->
  <div class="w-full">
  <AdProjectlist />
  </div>
  {
    projects.map((project) => {
      const statusArr = Array.isArray(project.status) ? project.status : [];
      return (
        <div class="relative flex flex-col p-6 bg-white dark:bg-slate-900 rounded-lg shadow hover:shadow-lg transition border border-transparent dark:border-slate-800">
          <div class="flex gap-2 mb-4 md:hidden flex-wrap">
            {statusArr.includes('latest') && (
              <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-blue-900 dark:text-blue-300 whitespace-nowrap">
                Latest
              </span>
            )}
            {statusArr.includes('completed') && (
              <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-green-900 dark:text-green-300 whitespace-nowrap">
                Completed
              </span>
            )}
            {statusArr.includes('in-development') && (
              <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-yellow-900 dark:text-yellow-300 whitespace-nowrap">
                In Development
              </span>
            )}
          </div>
          <div class="flex flex-col md:flex-row gap-6">
            {project.image && (
              <div class="md:w-1/3">
                <a href={`/projects/${project.slug}`} aria-label={project.title} tabindex="0">
                  {typeof project.image === 'object' ? (
                    <Image src={project.image} alt={project.title} class="object-cover w-full h-48 rounded transition hover:scale-105" />
                  ) : (
                    <img
                      src={project.image.startsWith('~/') ? project.image.replace('~', '') : project.image}
                      alt={project.title}
                      class="object-cover w-full h-48 rounded transition hover:scale-105"
                      loading="lazy"
                    />
                  )}
                </a>
              </div>
            )}
            <div class="flex-1 flex flex-col">
              <div class="flex-grow">
                <div class="flex items-center justify-between mb-2">
                  <h2 class="text-2xl font-bold leading-tight">{project.title}</h2>
                  <div class="hidden md:flex gap-2 flex-nowrap">
                    {statusArr.includes('latest') && (
                      <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-blue-900 dark:text-blue-300 whitespace-nowrap">
                        Latest
                      </span>
                    )}
                    {statusArr.includes('completed') && (
                      <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-green-900 dark:text-green-300 whitespace-nowrap">
                        Completed
                      </span>
                    )}
                    {statusArr.includes('in-development') && (
                      <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-sm dark:bg-yellow-900 dark:text-yellow-300 whitespace-nowrap">
                        In Development
                      </span>
                    )}
                  </div>
                </div>
                <p class="text-muted dark:text-slate-400 mb-4">{project.description}</p>
              </div>
              <div class="flex gap-3 mt-auto">
                <Button
  variant="primary"
  href={`/projects/${project.slug}`}
  aria-label={`Read more about ${project.title}`}
>
  <Icon name="tabler:book" class="w-5 h-5 mr-0.5" />
  Read More
  <span class="sr-only">about {project.title}</span>
</Button>
                {project.github && (
                  <Button variant="secondary" href={project.github} target="_blank" rel="noopener noreferrer">
                    <Icon name="tabler:brand-github" class="w-5 h-5 mr-0.5" />
                    GitHub
                  </Button>
                )}
              </div>
            </div>
          </div>
        </div>
      );
    })
  }
</div>